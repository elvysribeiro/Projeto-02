<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css"
    />
    <title>PlayList-Songs</title>
  </head>
  <body>
    <nav>
      <ul>
        <li>
          <a href="/"><img src="/img/icone.png" alt="EVSWEB" /></a>
        </li>
        <li>
          <a href="/"> <i class="bi bi-box-arrow-right"></i></a>
        </li>
      </ul>
    </nav>
    <section id="player">
      <h1>PlayList-Songs</h1>
      <div>
        <img id="currentImg" src="/img/musicoff.jpg" alt="" />
        <h2 id="currentName">Titulo</h2>
        <p id="curretArtist">Artista</p>
      </div>
      <div>
        <table>
          <thead>
            <tr>
              <th></th>
              <th>Nome</th>
              <th>Artista</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% playlist.forEach((music)=> { %>
            <tr class="musics">
              <td>
                <img src="<%= music.linkImage %>" alt="Imagem da musica" />
              </td>
              <td><%= music.name %></td>
              <td><%= music.author %></td>
              <td>
                <audio class="audio" src="<%= music.linkMusic %>"></audio>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </section>
  </body>
</html>
